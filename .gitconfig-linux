[core]
  editor = code >/dev/null 2>&1 --wait
  excludesfile = ~/.gitignore
[credential]
	credentialStore = secretservice
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code >/dev/null 2>&1 --wait --diff $LOCAL $REMOTE
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code >/dev/null 2>&1 --wait $MERGED
